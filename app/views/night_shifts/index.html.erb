<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-8">
     
    <div class="page-header">
       <h2>Listing NightShfits</h2>
    </div>
      <table class="table table-bordered" id="nightshiftList">
          <thead>
            <tr>
              <th>Date</th>
              <th>Claim</th>
              <th>Basicpay</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

        <tbody>
          <% @night_shifts.each do |night_shift| %>
            <tr>
              <td><%= night_shift.date %></td>
              <td><%= night_shift.claim %></td>
              <td><%= night_shift.basicpay %></td>
              <td><%= link_to 'Show', night_shift %></td>
              <td><%= link_to 'Edit', edit_night_shift_path(night_shift) %></td>
              <td><%= link_to 'Destroy', night_shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
     </table> 

  </div>

    <div class="col-md-4">
      <div class="page-header">
        <h2>Adding NightShfits</h2>
      </div>
       <div id="errorMsg">
         
       </div>
        <%= render "form" %>
       
   </div>

</div>

