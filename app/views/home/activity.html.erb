    </div>
    <div class="field">
        <%= f.label :bill %><br>
        <%= f.text_field :bill %>
    </div>
    <div class="field">
        <%= f.label :month %><br>
        <%= f.number_field :month %>
    </div>
    <div class="field">
        <%= f.label :basicpay_id %><br>
        <%= f.text_field :basicpay_id %>
    </div>
    <div class="field">
        <%= f.label :balance %><br>
