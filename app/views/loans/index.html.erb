
<div class="row">
  <div class="col-md-8">
     
    <div class="page-header">
        <h2>Listing Loans</h2>
    </div>

      <table class="table table-bordered" id="loanList">
          <thead>
            <tr>
              <th>Name</th>
              <th>Bill</th>
              <th>Month</th>
              <th>Basicpay</th>
              <th>Balance</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <td><%= loan.name %></td>
                <td><%= loan.bill %></td>
                <td><%= loan.month %></td>
                <td><%= loan.basicpay %></td>
                <td><%= loan.balance %></td>
                <td><%= link_to 'Show', loan %></td>
                <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
                <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
      </table>

       

  </div>

    <div class="col-md-4">
      <div class="page-header">
        <h2>Adding Loans</h2>
      </div>
       <div id="errorMsg">
         
       </div>
        <%= render "form" %>
       
   </div>

</div>

<%#= link_to 'New Loan', new_loan_path %>
